{
  "compilerOptions": {
    "noEmit": false,
    "baseUrl": ".",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es2019",
    "skipLibCheck": true,
    "module": "ESNext" /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */,
    "lib": ["es2019", "es2017", "es7", "es6", "dom", "dom.iterable"],
    "declaration": false,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": false,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "paths": {
      "@app/actions": ["./src/redux/actions/index"],
      "@app/reducers": ["./src/redux/reducers/index"],
      "@app/util": ["./src/redux/util"],
      "@app/hooks": ["./src/redux/hooks"]
    }
  },
  "include": ["src/**/*", "./typings"],
  "exclude": ["**/node_modules/*", "**/dist/*", "test"]
}
